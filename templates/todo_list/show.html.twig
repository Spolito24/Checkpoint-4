{% extends 'base.html.twig' %}

{% block title %}TodoList
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between mt-3">
		<div>
			<h1 class="ms-5 text-white">{{ todo_list.title }}</h1>
		</div>
		<button id="newTaskBtn" class="btn btn-secondary shadow-lg text-white fs-3 fw-semibold">Add Task</button>
		<div class="d-flex ">
			<a href="{{ path('todo_list_edit', {'id': todo_list.id}) }}" class="btn btn-secondary text-white d-flex align-items-center mx-3">
				<i class="bi bi-pencil-square fs-3"></i>
			</a>
			{{ include('todo_list/_delete_form.html.twig') }}
		</div>
	</div>

	<hr class="border border-white border-1 opacity-100 mx-4"/>

	<form id="taskForm" name="task" method="post" enctype="multipart/form-data" class="mx-4" style="display: none;">
		<label for="content" class="text-white">Add a new task</label>
		<div class="d-block text-center d-md-flex">
			<textarea class="form-control" name="content"></textarea>
			<button type="submit" class="btn btn-secondary shadow-lg text-white fs-3 fw-semibold">Submit</button>
		</div>
	</form>

	<div class="mt-4 mx-5">
		{% for task in todo_list.tasks %}
			<div class="d-flex my-3">
				<form name="status" method="post" enctype="multipart/form-data" class="mx-4 my-auto">
					{% if not task.completed %}
						<button type="submit" name="completed" value="{{task.id}}" class="btn btn-secondary text-white rounded-circle">
							<i class="bi bi-check-lg fs-3"></i>
						</button>
					{% else %}
						<button type="submit" name="unCompleted" value="{{task.id}}" class=" btn btn-success text-white rounded-circle">
							<i class="bi bi-check-lg fs-3"></i>
						</button>
					{% endif %}
				</form>

				<div class="card border border-secondary border-4 bg-primary shadow-lg text-white my-2">
					<div class="d-flex">
						<p class="mx-2 me-5 my-auto">{{task.content}}</p>
						{{ include('task/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
