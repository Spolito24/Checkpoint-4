{% extends 'base.html.twig' %}

{% block title %}TodoList
{% endblock %}

{% block body %}
	<div class="container ">
		<div class="d-flex justify-content-between">
			<h1 class="ms-5 text-white">{{ todo_list.title }}</h1>
			<a href="{{ path('task_new') }}" class="btn btn-secondary text-white">
				<h3>new task</h3>
			</a>
		</div>
	</div>
	<hr class="border border-white border-1 opacity-100 mx-4"/>
	<form name="task" method="post" enctype="multipart/form-data" class="mx-4">
		<label for="task" class="text-white">Add a new task</label>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<div class="d-block text-center d-md-flex">
			<textarea class="form-control"></textarea>
			<button type="submit" class="btn btn-secondary text-white mt-1">
				Envoyer
			</button>
		</div>
	</form>
	<div class="mt-4 mx-5">
		{% for task in todo_list.tasks %}
			<div class="card border border-secondary border-4 bg-primary shadow-lg text-white w-25 my-2">
				<p>{{task.content}}</p>
			</div>
		{% endfor %}
	</div>

	<a href="{{ path('todo_list_index') }}">back to list</a>


	<a href="{{ path('todo_list_edit', {'id': todo_list.id}) }}">edit</a>

	{{ include('todo_list/_delete_form.html.twig') }}
{% endblock %}
