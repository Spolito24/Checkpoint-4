{% extends 'base.html.twig' %}
{% block title %}Home
{% endblock %}
{% block body %}
	<h1 class="text-center">Your To-Do Lists</h1>
	<div class="container mt-3">
		<div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center g-2 ">
			{% for todo_list in todo_lists %}
				<div class="card border border-secondary border-4 bg-primary shadow-lg text-white w-25 mx-1 p-0">
					<a href="{{ path('todo_list_show', { id: todo_list.id }) }}">
						<h3 class="text-white text-center mt-1">{{ todo_list.title }}</h3>
					</a>
					<hr class="border border-secondary border-1 opacity-100"/>
					<ul>
						{% if todo_list.tasks is not empty %}
							{% for task in todo_list.tasks %}
								<li>{{task.content}}</li>
							{% endfor %}
						{% else %}
							<li>No task</li>
						{% endif %}
					</ul>
					<hr class="border border-secondary border-1 opacity-100"/>
					<div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
						<div class="progress-bar" style="width: 25%">25%</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
