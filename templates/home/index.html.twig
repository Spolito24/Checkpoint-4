{% extends 'base.html.twig' %}
{% block title %}Home
{% endblock %}
{% block body %}
	<h1 class="text-center">Your To-Do Lists</h1>
	<hr class="border border-white border-1 opacity-100 mx-5"/>

	<div class="container mt-3">
		<div class="row d-flex justify-content-center g-2 ">
			{% for todo_list in todo_lists %}
				<div class="col-9 col-md-6 col-lg-4 col-xl-3 d-flex justify-content-center">
					<div class="card border border-secondary border-4 bg-primary card-shadow text-white rounded-5 mx-3 mt-3 p-0 w-100">
						<a href="{{ path('todo_list_show', { id: todo_list.id }) }}">
							<h4 class="text-white mx-2 my-2">{{ todo_list.title|u.truncate(18, '...', true) }}</h4>
						</a>

						<hr class="border border-secondary border-1 opacity-100 my-0"/>

						<ul class="my-3 h-50">
							{% if todo_list.tasks is not empty %}
								{% for task in todo_list.tasks|slice(0,5) %}
									<li>{{task.content|u.truncate(13, '...', false)}}</li>
								{% endfor %}
							{% else %}
								<li>No task</li>
							{% endif %}
						</ul>

						<hr class="border border-secondary border-1 opacity-100 my-0"/>

						<div class="progress mx-2 my-2 border border-secondary border-2 rounded-4" role="progressbar" aria-label="Example label" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
							<div class="progress-bar bg-success rounded-4 overflow-visible fs-6 fw-bold" style="width: 25%">
								25%</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
